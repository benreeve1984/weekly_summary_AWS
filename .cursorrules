# Cursor rules for the project
root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[*.{js,py,css,html,yml,yaml}]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[*.{html,css}]
indent_size = 4
max_line_length = 120

[*.js]
indent_size = 4
max_line_length = 100
quote_type = single

[*.py]
indent_size = 4
max_line_length = 88
include_trailing_comma = true

[*.{yml,yaml}]
indent_size = 2 